---
import HeaderButton from "./HeaderButton.astro";
import { Counter } from "./Counter";
---

<header class="py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-6">
    <div class="mx-auto text-center mb-8 lg:mb-16">
        <h2 class="mb-4 text-5xl tracking-tight font-extrabold text-white">
            SpaceX Launches!
        </h2>
        <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
            All the information about SpaceX Launches
        </p>
    </div>

    <!-- Client:visible hace que sea dinámico -->
    <!-- Transition:persist permite mantener el estado durante la navegación entre transiciones de páginas -->
    <Counter client:visible transition:persist />

    <nav class="flex flex-col items-center justify-between w-full text-center md:flex-row">
        <HeaderButton link="/">Últimos lanzamientos</HeaderButton>
        <HeaderButton link="/oldest">Previos</HeaderButton>
        <HeaderButton link="/about">
            <svg width="40" height="40" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
                <path d="M12 9h.01"></path>
                <path d="M11 12h1v4h1"></path>
             </svg>
            Sobre el proyecto
        </HeaderButton>
    </nav>

</header>